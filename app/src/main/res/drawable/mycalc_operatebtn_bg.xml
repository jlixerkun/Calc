<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/colorOper"
                android:endColor="@color/colorOperDk"
                android:angle="270" />
            <corners android:radius="3dp" />
            <stroke
                android:width="1dp"
                android:color="@color/colorBorder" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient android:startColor="@color/colorOperDk"
                android:endColor="@color/colorOper"
                android:angle="270" />
            <corners android:radius="3dp" />
            <stroke android:width="1px" android:color="@color/colorBorder" />
        </shape>
    </item>
</selector>